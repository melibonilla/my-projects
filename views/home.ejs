      </div>
    </section>
<section>
    <main class="container-lg">
      <!-- Formulario que crea una tarea -->
      <form action="/create-task" method="POST">
        <table class="table table-hover table-striped">
          <thead>
            <tr class="table-active">
              <th>Añadir tarea</th>
              <th>Categoría</th>
              <th>Fecha</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><input type="text" name="description" placeholder="¿Qué necesitas hacer?" required></td>
              <td><input type="text" name="category" placeholder="¿Sobre qué es la tarea?" required></td>
              <td><input type="date" name="date" required></td>
              <td><input type="submit" class="btn btn-success" id="add"
                  value="Añadir tarea"></td>
            </tr>
          </tbody>
        </table>
      </form>

      <!-- Sección donde se ven las tareas creadas -->
      <div>
        <h2>Tus tareas</h2>

        <form action="/delete-task" method="GET">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Select</th>
                <th>Tarea</th>
                <th>Categoría</th>
                <th>Fecha para tu tarea</th>
              </tr>
            </thead>
            <tbody>
              <% tasks.forEach(function(task) { %>
                <tr>
                  <td><input type="checkbox" name="<%= task._id %>"></td>
                  <td>
                    <%= task.description %>
                  </td>
                  <td>
                    <%= task.category %>
                  </td>
                  <td>
                    <%= task.date.toLocaleDateString('es-CR') %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>

                    <div align="center">
                      <input type="submit" class="btn btn-danger" value="Borrar tarea">
                    </div>
                  </form>
                </div>
              </main>
            </section>


